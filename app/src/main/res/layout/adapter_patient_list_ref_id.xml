<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainLy"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/reference_id_"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/dosis_regular"
                android:textColor="@color/headingTextColor"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/patientRefID"
                android:layout_width="match_parent"
                android:text="@string/dummy_line"
                android:fontFamily="@font/dosis_medium"
                android:textColor="@color/valueTextColor"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/district"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/dosis_regular"
                android:textColor="@color/headingTextColor"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/patientDistrict"
                android:layout_width="match_parent"
               android:text="@string/dummy_line"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/dosis_medium"
                android:textColor="@color/valueTextColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/facility"
                android:fontFamily="@font/dosis_regular"
                android:textColor="@color/headingTextColor"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/patientFacility"
                android:layout_width="match_parent"
               android:text="@string/dummy_line"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/dosis_medium"
                android:textColor="@color/valueTextColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyRefIDAction"
            android:layout_width="match_parent"
            android:background="@drawable/btn_disable"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="18dp"
                android:background="@drawable/baseline_input"
                android:layout_height="24dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/dosis_medium"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Update Info"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>